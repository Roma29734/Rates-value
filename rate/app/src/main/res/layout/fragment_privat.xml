<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.privat.PrivatFragment"
    android:background="@color/mainBackground">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/privatRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <TextView
        android:id="@+id/textWarningPrivat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/privatRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/privatRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/privatRecyclerView"
        tools:text="Ошибка 404"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_semi_bold"/>

    <TextView
        android:id="@+id/textViewRecommendPrivat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/mainGrey"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWarningPrivat"
        tools:text="попробуйте перезапустить приложение " />
</androidx.constraintlayout.widget.ConstraintLayout>