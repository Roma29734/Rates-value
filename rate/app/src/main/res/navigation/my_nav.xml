<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.rate.screens.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_rootFragment"
            app:destination="@id/rootFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/cashFragment"
        android:name="com.example.rate.screens.start.CashFragment"
        android:label="fragment_cash"
        tools:layout="@layout/fragment_cash" />
    <fragment
        android:id="@+id/nonCashFragment"
        android:name="com.example.rate.screens.second.NonCashFragment"
        android:label="fragment_non_cash"
        tools:layout="@layout/fragment_non_cash" />
    <fragment
        android:id="@+id/rootFragment"
        android:name="com.example.rate.screens.root.RootFragment"
        android:label="fragment_root"
        tools:layout="@layout/fragment_root" />
</navigation>